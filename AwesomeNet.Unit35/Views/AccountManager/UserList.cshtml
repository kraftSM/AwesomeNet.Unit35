<form class="navbar-form navbar-right" role="search" style="position: relative; display: inline-flex;">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Найти">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
<div class="block-reg background-white">
    <div class="righ-align">
        <form asp-area="" asp-controller="AccountManager" asp-action="UserList">
            <i class="fa fa-search"></i>
            <input type="text" placeholder="Поиск" name="search">
        </form>
    </div>
    @if (Model.UserList.Count != 0)
    {

        @foreach (var user in @Model.UserList)
        {
            <div>
                
                @*<img class="userImg" src=@user.Image width="100">*@
                <label class="userName">@user.GetFullName() <br />
                    @user.Status<br />
                </label>
                @if (!@user.IsFriendWithCurrent)
                {
                    <form asp-controller="AccountManager" asp-action="AddFriend" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Добавить в друзья
                        </button>
                    </form>
                }
            </div>
        }
    }
    else
    {
        <div>
            <label> Поиск не дал результатов.</label>
        </div>
    }
</div>