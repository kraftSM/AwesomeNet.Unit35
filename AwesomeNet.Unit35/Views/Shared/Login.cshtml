@model AwesomeNet.Front.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login Form";
}
<div class="block-reg background-white">
    <h4 class="center">Добро пожаловать!</h4>
   <form class="frm" method="post" asp-controller="AccountManager" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mrgn">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div>
            <input class="radio" asp-for="RememberMe" type="radio" value="true" /> RememberMe<Br>
            <span> <input class="enter_submit" type="submit" value="Войти" /></span>
        </div>
    </form>
</div>
