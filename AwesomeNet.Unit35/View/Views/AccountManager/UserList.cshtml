<div class="block-reg background-white">
    <div class="righ-align">
        <form asp-area="" asp-controller="AccountManager" asp-action="UserList">
            <i class="fa fa-search"></i>
            <input type="text" placeholder="Значение для поиска..." name="search">
            <button type="submit" class="btn btn-default">Искать пользователей </button>            
        </form>        
    </div>

    @if (Model.UserList.Count != 0)
    {

        @foreach (var user in @Model.UserList)
        {
            <div>
                <label class="userName">
                    @user.GetFullName() <br />
                    @user.Status<br />
                </label>
                @if (!@user.IsFriendWithCurrent)
                {
                    <form asp-controller="AccountManager" asp-action="AddFriend" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Добавить в друзья
                        </button>
                    </form>
                }
            </div>
        }
    }
    else
    {
        <div>
            <label> Поиск не дал результатов.</label>
        </div>
    }
    <div id="button">
        <form>
            <button method="get" type="submit" class="enter_submit" asp-controller="AccountManager" asp-action="UserPage">На страницуе пользователя...</button>
        </form>
    </div>
</div>